    <script
      src="https://code.jquery.com/jquery-3.6.0.min.js"
      integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
      crossorigin="anonymous"></script>
      <script type="text/javascript">
        $(document).ready(() => {
          $('.games__button').click(async () => {
            const data = await fetch('/apis/drawing').then(data => data.json())
            if(!data){
              $('.games').hide()
              $('.banner').css("background","black")
              const prize = document.createElement('div')
              prize.classList.add('prize')
              prize.innerHTML = `<h2 class="none">銘謝惠顧</h2><img src="https://media.giphy.com/media/3ohs7Ys9J8XyFVheg0/giphy.gif" alt="" height="300px;">`
              const prizeAnnouncement = document.createElement('h2')
              $('.banner').append(prize)
            } else {
              $('.games').hide()
              $('.banner').css("background",`url("./apis/get-image/${data.picture}") center/cover no-repeat`)
              const prize = document.createElement('div')
              prize.classList.add('prize')
              prize.innerHTML=`<h2>【${data.prize}】</h2><h2>${data.description}</h2><div class="prize__button">點此輸入領獎資訊</div>`
              $('.banner').append(prize)
              $('.banner').addClass('mask')
            }
          })
        })
      </script>
  </body>
